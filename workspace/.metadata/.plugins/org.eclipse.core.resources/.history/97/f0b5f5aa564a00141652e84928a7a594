#include <iostream>
#include "DLList.h"
using namespace std;

using namespace ods;

int main() {

	DLList<char> dllist;
	dllist.add('i');
	dllist.add('r');
	dllist.add('i');
	dllist.add('n');
	dllist.add('a');

	cout << "Is this a palindrome? " << dllist.IsPalindrome() << endl;

	dllist.clear();

	dllist.add('a');
	dllist.add('t');
	dllist.add('o');
	dllist.add('y');
	dllist.add('o');
	dllist.add('t');
	dllist.add('a');
	dllist.add('i');
	dllist.add('s');
	dllist.add('a');
	dllist.add('t');
	dllist.add('o');
	dllist.add('y');
	dllist.add('o');
	dllist.add('t');
	dllist.add('a');

	cout << "Is this a palindrome? " << dllist.IsPalindrome() << endl;

	return 0;
}

